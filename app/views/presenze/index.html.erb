<%- model_class = Presenza -%>
<div class="row">
  <div class="span2">
    <%= image_tag('Logo_Coop_Liguria.gif',:size => "146x100", :class => 'img-polaroid') %>
  </div>
  <div class="span10">
    <h1><%= @assemblea.nome %></h1>
    <h3>Assemblea del <%= @assemblea.data.strftime("%d/%m/%Y") %></h3>
  </div>
</div>
<%= form_tag presenze_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search %>
    <%= submit_tag "Cerca", :name => nil %>
  </p>
<% end %>
<%= render 'elencosoci', :soci => @soci, :model_class => model_class unless @soci.nil? %>



<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:socio_id) %></th>
      <th><%= model_class.human_attribute_name(:delegato) %></th>
      <th><%= model_class.human_attribute_name(:presente) %></th>
      <th><%= model_class.human_attribute_name(:assemblea_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @presenze.each do |presenza| %>
      <tr>
        <td><%= link_to presenza.id, presenza_path(presenza) %></td>
        <td><%= presenza.socio.socio %></td>
        <td><%= presenza.delegato %></td>
        <td><%= presenza.presente %></td>
        <td><%= presenza.assemblea.nome %></td>
        <td><%=l presenza.created_at %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      presenza_path(presenza),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>