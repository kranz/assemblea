<div class="row-fluid">
  <div id="mylogin" class="span5">
    <div class="loginimage"><img src="/assets/assemblea.png" /></div>
  	<div class="hero-unit">
  	  <h2>Login</h2>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.text_field :username, :placeholder => "Utente" %></div>
        <div><%= f.password_field :password, :placeholder => "Password" %></div>
        <div><%= f.submit "Login", :class => "btn btn-large btn-primary" %></div>
      <% end %>
    </div>
  </div>
</div>
